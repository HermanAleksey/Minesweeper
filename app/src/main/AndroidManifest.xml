<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sapper">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher_mine_100px"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.sapper.view.activity.MinefieldActivity.activity.MinefieldBTActivity"
            android:parentActivityName="com.example.sapper.view.activity.MainActivity" />
        <activity
            android:name="com.example.sapper.view.activity.GameResultsActivity"
            android:parentActivityName="com.example.sapper.view.activity.MainActivity" />
        <activity android:name="com.example.sapper.view.activity.WaitingRoomActivity" />
        <activity
            android:name="com.example.sapper.view.activity.GameSettingsActivity"
            android:parentActivityName="com.example.sapper.view.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sapper.view.activity.CompanyLevelActivity"
            android:parentActivityName="com.example.sapper.view.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sapper.view.activity.MinefieldActivity.activity.MinefieldActivity"
            android:parentActivityName="com.example.sapper.view.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sapper.view.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sapper.view.activity.DeviceListActivity"
            android:parentActivityName="com.example.sapper.view.activity.MainActivity" />

        <!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5303222102711101~9781743838" />
    </application>

</manifest>