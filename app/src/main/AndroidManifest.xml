<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sapper">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher_mine_100px"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.GameResultsActivity"
            android:parentActivityName=".activity.MainActivity" />
<!--        <activity-->
<!--            android:name=".activity.SearchingBluetoothGameActivity"-->
<!--            android:parentActivityName=".activity.MainActivity" />-->
        <activity android:name=".activity.WaitingRoomActivity" />
        <activity
            android:name=".activity.GameSettingsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.CompanyLevelActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.MinefieldActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>