<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    style="?attr/background_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?attr/game_label"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/button_main_company"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="@string/company"
            style="?attr/main_button" />

        <Button
            android:id="@+id/button_main_custom_game"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="@string/singleplayer"
            style="?attr/main_button" />

        <Button
            android:id="@+id/button_main_bluetooth_game_client"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="BT_CLIENT"
            style="?attr/main_button" />

        <Button
            android:id="@+id/button_main_bluetooth_game_server"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="BT_SERVER"
            style="?attr/main_button" />

        <Spinner
            android:id="@+id/spThemes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/theme_array"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</LinearLayout>