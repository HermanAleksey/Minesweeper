<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.RoomListActivity"
    style="?attr/background_layout">

    <Button
        android:id="@+id/button_rooms_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="refresh"
        style="?attr/main_button"/>

    <Button
        android:id="@+id/button_rooms_list_add"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="create"
        style="?attr/main_button"/>

    <ListView
        android:id="@+id/list_view_rooms_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </ListView>

</LinearLayout>