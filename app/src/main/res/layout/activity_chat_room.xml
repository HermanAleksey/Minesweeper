<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.ChatRoomActivity.ChatRoomActivity">

    <LinearLayout
        android:id="@+id/ll_chat_waiting_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            style="?attr/main_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/waiting_room" />

        <TextView
            style="?attr/casual_description"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center|bottom"
            android:text="@string/room_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="?attr/casual_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/game_mode" />

                <TextView
                    android:id="@+id/tv_chat_waiting_room_game_mode"
                    style="?attr/casual_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Класическая" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="?attr/casual_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/minefieldSize" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_chat_waiting_room_field_height"
                        style="?attr/casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10" />

                    <TextView
                        style="?attr/casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x" />

                    <TextView
                        android:id="@+id/tv_chat_waiting_room_field_width"
                        style="?attr/casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="?attr/casual_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/minesCount" />

                <TextView
                    android:id="@+id/tv_chat_waiting_room_mines_amount"
                    style="?attr/casual_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="?attr/casual_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/timeLimit" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_chat_waiting_room_time_min"
                        style="?attr/casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:gravity="center"/>

                    <TextView
                        style="?attr/casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_chat_waiting_room_time_sec"
                        style="?attr/casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/useTheSameField"
                    style="?attr/casual_description"/>

                <CheckBox
                    android:id="@+id/cb_chat_waiting_room_use_same_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    style="?attr/checkbox_game_settings"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|bottom"
                android:text="@string/player_1"
                style="?attr/casual_description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/nickname"
                        style="?attr/casual_description"/>

                    <TextView
                        android:id="@+id/tv_chat_waiting_room_player_1_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        style="?attr/casual_description"/>

                    <CheckBox
                        android:id="@+id/chb_waiting_room_player_1_ready"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/checkbox_game_settings"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|bottom"
                android:text="@string/player_2"
                style="?attr/casual_description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/nickname"
                        style="?attr/casual_description"/>

                    <TextView
                        android:id="@+id/tv_chat_waiting_room_player_2_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        style="?attr/casual_description"/>


                    <CheckBox
                        android:id="@+id/chb_waiting_room_player_2_ready"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/checkbox_game_settings"/>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_chat_waiting_room_start_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:text="@string/startGame"
                style="?attr/main_button"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_chat_room_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="?casual_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/field_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_chat_room_field_height"
                        style="?casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="?casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*" />

                    <TextView
                        android:id="@+id/tv_chat_room_field_width"
                        style="?casual_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="?attr/secondary_vertical_line"
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_chat_room_minutes"
                    style="?minefield_time_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right" />

                <TextView
                    style="?minefield_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=":" />

                <TextView
                    android:id="@+id/tv_chat_room_seconds"
                    style="?minefield_time_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left" />
            </LinearLayout>

            <LinearLayout
                style="?attr/secondary_vertical_line"
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="?casual_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/mines" />

                <TextView
                    android:id="@+id/tv_chat_room_mines"
                    style="?casual_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:isScrollContainer="true"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal|vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical">

                        <LinearLayout
                            android:id="@+id/ll_chat_room_minefield"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </HorizontalScrollView>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_debug"
                    style="?casual_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="@string/chooseCellSize" />

                <SeekBar
                    android:id="@+id/seek_bar_chat_room_cell_size"
                    style="?seekBar_cell_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ToggleButton
                android:id="@+id/tgbtn_chat_room_flag"
                style="?minefield_toggle_button"
                android:layout_width="61dp"
                android:layout_height="63dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>