<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ProfileActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_profile_screen_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="text"/>

    <Button
        android:id="@+id/btn_profile_screen_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log_in"/>

    <Button
        android:id="@+id/btn_profile_screen_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log_out"/>

    <Button
        android:id="@+id/btn_profile_screen_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="registration"/>


</LinearLayout>