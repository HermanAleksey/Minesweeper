<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical"
    tools:context=".activity.GameResultsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/background_border_1">

        <TextView
            android:id="@+id/tv_game_result_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/art_modern_ap"
            android:gravity="center"
            android:text="@string/lose"
            android:textColor="@color/colorBlack"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/game_mode" />

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" " />

            <TextView
                android:id="@+id/tv_game_result_game_mode"
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/minefieldSize" />

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=": " />

            <TextView
                android:id="@+id/tv_game_result_height"
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="x" />

            <TextView
                android:id="@+id/tv_game_result_width"
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/minesCount" />

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=": " />

            <TextView
                android:id="@+id/tv_game_result_mines_count"
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/completion_time" />

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=": " />

            <TextView
                android:id="@+id/tv_game_result_minutes"
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=":" />

            <TextView
                android:id="@+id/tv_game_result_seconds"
                style="@style/StyleGameResultGameDescriptionXXHDPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_game_result_confirm"
            style="@style/StyleMenuButtonFormat"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="60dp"
            android:background="@drawable/my_main_button"
            android:onClick="onConfirmButtonClick"
            android:text="@string/confirm" />

    </LinearLayout>

</LinearLayout>